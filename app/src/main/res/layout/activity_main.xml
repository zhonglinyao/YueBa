<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lanou.yueba.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"></include>

        <FrameLayout
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@color/colorLine"/>

        <RadioGroup
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/iv_message_main"
                style="@style/MainActivityRadioButton"
                android:drawableTop="@drawable/message_button"/>

            <RadioButton
                android:id="@+id/iv_contact_main"
                style="@style/MainActivityRadioButton"
                android:drawableTop="@drawable/contact_button"/>

            <RadioButton
                android:id="@+id/iv_dynamic_main"
                style="@style/MainActivityRadioButton"
                android:drawableTop="@drawable/dynamic_button"/>

        </RadioGroup>
    </LinearLayout>
</FrameLayout>

