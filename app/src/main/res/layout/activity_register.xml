<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/StatusBar">

    <android.support.v7.widget.Toolbar
        style="@style/ToolBar"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/iv_back_register"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/toolbar_back"/>

            <TextView
                android:id="@+id/textView2"
                style="@style/CustomTitleTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="@string/register"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_name_register"
                style="@style/Register"
                android:hint="@string/put_name_hint"/>

            <EditText
                android:id="@+id/et_password_register"
                style="@style/Register"
                android:hint="@string/put_password_hint"/>

            <EditText
                android:id="@+id/et_password_sure_register"
                style="@style/Register"
                android:hint="@string/put_password_sure_hint"/>

            <Button
                android:id="@+id/btn_sure_register"
                style="@style/Register"
                android:background="@drawable/shape_sure"
                android:text="@string/sure"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>