<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_dynamic_item"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/civ_dynamic_item"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_dynamic_item"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_date_dynamic_item"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="15sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content_dynamic_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/civ_dynamic_item"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/iv_img_dynamic_item"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:foregroundGravity="left"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_content_dynamic_item"/>

        <!--<ImageView-->
        <!--android:id="@+id/iv_share_dynamic_item"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_below="@id/iv_img_dynamic_item"/>-->
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorLine"
        android:alpha="0.5"/>
</LinearLayout>