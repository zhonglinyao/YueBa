<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_layout_avatar_video"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon"/>

        <TextView
            android:id="@+id/tv_layout_channelName_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_layout_avatar_video"
            android:paddingLeft="10dp"
            android:text="aaaa"/>

        <TextView
            android:id="@+id/tv_layout_playCount_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:text="104万播放数"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_layout_video"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <FrameLayout
            android:id="@+id/fl_layout_super_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rl_layout_player_control_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#30000000"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_layout_cover_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#30000000"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_play_normal"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#50000000"/>


        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_layout_title_video"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="我只是个标题而已"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_layout_uploadTime_video"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_width="100dp"
            android:text="aaaaa"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>